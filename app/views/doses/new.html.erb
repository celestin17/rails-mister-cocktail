<div class="container">
  <div class="row text-center">
    <h1><%= @cocktail.name %></h1>
    <div class="col-xs-6 col-xs-offset-3">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit %>
    <% end %>
    <%= link_to "home", cocktails_path %>
    </div>
  </div>
</div>
