<div class="container text-center">
  <div class="row">
    <h1>Our Cocktails</h1>
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-4">
        <h1><%= link_to cocktail.name, cocktail_path(cocktail), class: "btn" %></h1>
        <h6><%= link_to "delete", cocktail_path(cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "btn-sm btn-danger" %>
        </h6>
      </div>
    <% end %>
  </div>
</div>


<div class="text-center">
  <%= link_to "create", new_cocktail_path, class: "btn btn-primary" %>
</div>
